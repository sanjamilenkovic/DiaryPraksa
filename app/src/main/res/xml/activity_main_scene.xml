<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnClick
            motion:clickAction="toggle"
            motion:targetId="@+id/fab" />

        <KeyFrameSet>

            <KeyPosition
                motion:framePosition="100"
                motion:motionTarget="@id/fab1"
                motion:keyPositionType="parentRelative"
                motion:percentY="0.5"
                />

            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/fab1"
                android:scaleY="1.8"
                android:scaleX="1.8"
                />

            <KeyPosition
                motion:framePosition="100"
                motion:motionTarget="@id/fab2"
                motion:keyPositionType="parentRelative"
                motion:percentY="0.5"
                />

            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/fab2"
                android:scaleY="1.8"
                android:scaleX="1.8"

                />


            <!-- TODO Add Custom attributes here -->

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">


        <Constraint
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            motion:pathMotionArc="startHorizontal"
            motion:layout_constraintBottom_toTopOf="@+id/bottom_nav_view"
            motion:layout_constraintEnd_toEndOf="parent" />


        <Constraint
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            motion:pathMotionArc="startHorizontal"
            motion:layout_constraintBottom_toTopOf="@+id/bottom_nav_view"
            motion:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            motion:pathMotionArc="startHorizontal"
            motion:layout_constraintBottom_toTopOf="@+id/bottom_nav_view"
            motion:layout_constraintEnd_toEndOf="parent" />




    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="330dp"
            motion:layout_constraintHorizontal_bias="0.26" />

        <Constraint
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/horizontalGuideline"
            motion:layout_constraintStart_toEndOf="@+id/verticalGuideline" />

        <Constraint
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="330dp"
            motion:layout_constraintHorizontal_bias="0.721" />




    </ConstraintSet>
</MotionScene>