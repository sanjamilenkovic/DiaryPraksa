<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="99"
                motion:motionTarget="@id/textViewCallFriend"
                android:alpha="0.0"
                />

            <KeyAttribute
                motion:framePosition="99"
                motion:motionTarget="@id/textViewChatBot"
                android:alpha="0.0"
                />

            <KeyAttribute
                motion:framePosition="99"
                motion:motionTarget="@id/textViewDismiss"
                android:alpha="0.0"
                />
        </KeyFrameSet>
        <OnClick
            motion:clickAction="toggle"
            motion:targetId="@+id/buttonEmergency" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/backgroundMainActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/buttonEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            motion:pathMotionArc="startHorizontal"
            motion:layout_constraintBottom_toTopOf="@+id/bottom_nav_view"
            motion:layout_constraintEnd_toEndOf="parent" />


        <Constraint
            android:id="@+id/buttonChatBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            motion:pathMotionArc="startHorizontal"
            motion:layout_constraintBottom_toTopOf="@+id/bottom_nav_view"
            motion:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/buttonTalkToFriend"
            android:layout_width="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            motion:pathMotionArc="startHorizontal"
            motion:layout_constraintBottom_toTopOf="@+id/bottom_nav_view"
            motion:layout_constraintEnd_toEndOf="parent" />

<!--        <Constraint-->
<!--            android:id="@+id/textViewCallFriend"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:alpha="0.0"-->
<!--            motion:layout_constraintTop_toBottomOf="@+id/buttonTalkToFriend"-->
<!--            motion:layout_constraintEnd_toEndOf="parent" />-->

<!--        <Constraint-->
<!--            android:id="@+id/textViewChatBot"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:alpha="0.0"-->
<!--            motion:layout_constraintTop_toBottomOf="@+id/buttonChatBot"-->
<!--            motion:layout_constraintEnd_toEndOf="@+id/textViewCallFriend" />-->


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/backgroundMainActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/buttonTalkToFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/horizontalGuideline"
            motion:layout_constraintStart_toEndOf="@id/buttonEmergency"
            />

        <Constraint
            android:id="@+id/buttonEmergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/horizontalGuideline"
            motion:layout_constraintStart_toEndOf="@+id/verticalGuideline" />

        <Constraint
            android:id="@+id/buttonChatBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/horizontalGuideline"
            motion:layout_constraintEnd_toStartOf="@+id/buttonEmergency"
            />

        <Constraint
            android:id="@+id/textViewCallFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/buttonTalkToFriend"
            motion:layout_constraintStart_toStartOf="@id/buttonTalkToFriend"
            />

        <Constraint
            android:id="@+id/textViewChatBot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/buttonChatBot"
            motion:layout_constraintEnd_toEndOf="@id/buttonChatBot"/>

        <Constraint
            android:id="@+id/textViewDismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@+id/buttonEmergency"
            motion:layout_constraintStart_toEndOf="@id/buttonChatBot"
            motion:layout_constraintEnd_toStartOf="@id/textViewCallFriend"/>



    </ConstraintSet>
</MotionScene>