<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/friend_bg"
        android:layout_width="211dp"
        android:layout_height="256dp"
        android:src="@drawable/friend_bg9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageFriend"
        android:layout_width="@dimen/imageFriendDimen"
        android:layout_height="@dimen/imageFriendDimen"
        android:src="@drawable/sticker_1"
        app:layout_constraintStart_toStartOf="@id/friend_bg"
        app:layout_constraintTop_toTopOf="@id/friend_bg"
        android:layout_marginTop="@dimen/imageFriendMargins"
        android:layout_marginStart="@dimen/imageFriendMargins" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ime"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/editTextMargin"
        android:layout_marginStart="@dimen/editTextMargin"
        app:layout_constraintStart_toEndOf="@id/imageFriend"
        app:layout_constraintTop_toTopOf="@id/imageFriend" />

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prezime"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="@dimen/editTextMargin"
        app:layout_constraintStart_toEndOf="@id/imageFriend"
        app:layout_constraintTop_toBottomOf="@id/nameTextView"  />

    <TextView
        android:id="@+id/telephoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telephone"
        android:layout_marginStart="@dimen/editTextMargin"
        app:layout_constraintStart_toStartOf="@id/imageFriend"
        app:layout_constraintTop_toBottomOf="@id/imageFriend"  />

    <TextView
        android:id="@+id/telephoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_phone"
        app:layout_constraintStart_toStartOf="@id/telephoneText"
        app:layout_constraintTop_toBottomOf="@id/telephoneText"  />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/telephoneTextView"
        app:layout_constraintTop_toBottomOf="@id/telephoneTextView"  />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_gmail_com"
        app:layout_constraintStart_toStartOf="@id/emailText"
        app:layout_constraintTop_toBottomOf="@id/emailText"  />

